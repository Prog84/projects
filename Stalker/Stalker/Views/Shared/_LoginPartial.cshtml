@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{

    <ul class="nav navbar-nav navbar-right nav-pills">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="False" aria-haspopup="true">@User.Identity.GetUserName()<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>
                    @Html.ActionLink("Личный кабинет", "PersonalPage", new { area = "Administration", controller = "Account"})
                </li>
            </ul>
        </li>

        <li>
            @Html.ActionLink("Выход", "Logout", new { controller = "Account", returnUrl = Url.Action("Index", "Home")}, htmlAttributes: new {@class = "navbar-link"})
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Войти", "Login", new {area = "Administration", controller = "Account", returnUrl = Url.Action("Index", new {area = "", controller = "Home"})})</li>
    </ul>
}